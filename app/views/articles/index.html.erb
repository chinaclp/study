<html> 

  <head>

    <h1>hello!</h1>

  </head>   

  <body> 

    <table>
      <thead>
        <tr width="793px">
          <th class="title">标题</th> 
          <th class="summary">摘要</th> 
          <th class="name">作者</th>
          <th class="count">评论数量</th> 
          <th class="operate">操作</th> 
        </tr> 
      </thead>

      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td align="center">
              <%= link_to article.title, article_path(:id => article.id) %>
            </td>
            <td ><%= article.summary %></td>
            <td align="center"><%= article.user.name if article.user %></td>     <!-- if判断是否有用户名-->
            <td align="center"><%= article.comments_number %></td>
            <td align="center">
              <%= link_to '修改', edit_article_path(:id => article.id), :method => 'get'%>
              <%= link_to '删除', article_path( :id => article.id ), :method => 'delete' %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </body> 

  </table>

  <div class="new"> 
    <%= link_to '新建', new_article_path %>
    <%= link_to '返回主页面',root_path%>
  </div> 
  <%= form_tag articles_path, :method => :get do %> 
  <div class="new"> 
    <%= label_tag "查询关键字" %> 
    <%= text_field_tag :content %>  
    <%= submit_tag "提交" %>
  </div>
<% end %>

</html> 
